// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Project {
  id                  String   @id @default(uuid())
  name                String
  apiKey              String   @unique
  firebaseProjectId   String?
  bigqueryDatasetName String?
  createdAt           DateTime @default(now())
  
  components          Component[]
  processedCrashes    ProcessedCrash[]
}

model Component {
  id              String   @id @default(uuid())
  projectId       String
  identifier      String
  name            String?
  status          String   @default("active") // active, maintenance, deprecated
  fallbackMessage String?  @default("Feature unavailable.")
  crashThreshold  Int?     @default(5)
  totalCrashCount Int      @default(0) // Lifetime crash count
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  project              Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  processedCrashes     ProcessedCrash[]
  locks                ComponentLock[]
  versionStats         ComponentVersionStat[]
  componentErrors      ComponentError[]

  @@unique([projectId, identifier])
  @@index([projectId])
}

// Track version-specific crash metrics
model ComponentVersionStat {
  id            String   @id @default(uuid())
  componentId   String
  appVersion    String   // e.g., "1.0.0", "2.1.3"
  crashCount    Int      @default(0)
  actionCount   Int      @default(0) // Total action calls
  lastUpdated   DateTime @updatedAt
  createdAt     DateTime @default(now())

  component     Component @relation(fields: [componentId], references: [id], onDelete: Cascade)

  @@unique([componentId, appVersion])
  @@index([componentId])
  @@index([appVersion])
}

model ProcessedCrash {
  id              String   @id @default(uuid())
  projectId       String
  componentId     String?
  firebaseEventId String?
  issueId         String?
  errorMessage    String?
  stackTrace      String?
  analysisStatus  String   @default("pending") // pending, analyzing, completed, failed
  geminiAnalysis  Json?
  createdAt       DateTime @default(now())

  project         Project    @relation(fields: [projectId], references: [id], onDelete: Cascade)
  component       Component? @relation(fields: [componentId], references: [id])
}

model ComponentLock {
  id          String   @id @default(uuid())
  componentId String
  lockedBy    String   @default("system")
  reason      String?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())

  component   Component @relation(fields: [componentId], references: [id], onDelete: Cascade)
}

// Detailed error logging with action tracking
model ComponentError {
  id              String   @id @default(uuid())
  componentId     String
  projectId       String
  actionId        String   // Reference to which action triggered the error
  appVersion      String   // App version when error occurred
  errorMessage    String
  stackTrace      String?
  errorType       String?  // e.g., "NullPointerException", "NetworkError"
  metadata        Json?    // Additional context
  isArchived      Boolean  @default(false)
  archivedAt      DateTime?
  createdAt       DateTime @default(now())

  component       Component @relation(fields: [componentId], references: [id], onDelete: Cascade)

  @@index([componentId])
  @@index([projectId])
  @@index([appVersion])
  @@index([actionId])
  @@index([createdAt]) // For archiving queries
  @@index([isArchived])
}

// Application utilities/metadata
model ApplicationUtil {
  id            String   @id @default(uuid())
  projectId     String
  currentAppVersion String  // Current production version
  minSupportedVersion String // Minimum supported app version
  metadata      Json?    // Additional app config like flags, feature toggles
  lastUpdated   DateTime @updatedAt
  createdAt     DateTime @default(now())

  @@unique([projectId])
  @@index([projectId])
}
